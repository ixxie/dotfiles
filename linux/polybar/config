;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
good = #55aa55

[bar/bar1]
monitor = DP-0
width = 100%
height = 20
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

border-size = 2
border-color = ${colors.background}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = GohuGohuFont:pixelsize=11;1
font-1 = siji:pixelsize=10;1

modules-left = xworkspaces
modules-center =
modules-right = volume eth date

tray-position = right
tray-padding = 0

[module/eth]
type = internal/network
interface = enp5s0
interval = 5

format-connected-prefix = "ETH: "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected-underline = ${colors.good}
label-connected = %local_ip%

format-disconnected-prefix = "ETH: "
format-disconnected-prefix-foreground = ${colors.foreground-alt}
label-disconnected-underline = ${colors.alert}
label-disconnected = ERROR

[module/date]
type = internal/date
interval = 5

time = "%a %d %b, %H:%M"

format-prefix = "TIME: "
format-prefix-foreground = ${colors.foreground-alt}

label = %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume-prefix = "VOL: "
label-volume = "%percentage%%"
label-volume-foreground = ${colors.foreground}
label-volume-underline = ${colors.good}

format-muted-prefix = "VOL: "
label-muted = OFF
format-muted-prefix-foreground = ${colors.foreground-alt}
label-muted-foreground = ${colors.foreground}
label-muted-underline = ${colors.alert}

[module/xworkspaces]
type = internal/xworkspaces

enable-scroll = false

label-active = " %index% "
label-active-foreground = ${colors.foreground}
label-active-underline = ${colors.foreground}

label-occupied = " %index% "
label-occupied-foreground = ${colors.foreground}

label-urgent = " %index% "
label-urgent-foreground = ${colors.alert}

label-empty = " %index% "
label-empty-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
